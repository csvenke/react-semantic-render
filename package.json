{
  "name": "react-semantics",
  "version": "0.1.0",
  "description": "Useful semantic helper components for working with React.",
  "author": "Christian Svenkerud",
  "repository": {
    "type": "git",
    "url": "https://github.com/csvenke/react-semantics.git"
  },
  "main": "index.ts",
  "types": "index.d.ts",
  "private": false,
  "license": "MIT",
  "keywords": [
    "react",
    "react-components",
    "react-utils",
    "react-library"
  ],
  "dependencies": {
    "prop-types": "^15.6.2"
  },
  "peerDependencies": {
    "react-dom": "^16.4.1",
    "react": "^16.4.1"
  },
  "devDependencies": {
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/enzyme": "^3.1.12",
    "@types/jest": "^23.3.0",
    "@types/prop-types": "^15.5.3",
    "@types/react-dom": "^16.0.6",
    "@types/react": "^16.4.6",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme": "^3.3.0",
    "husky": "1.0.0-rc.13",
    "jest": "^23.4.1",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "react-dom": "^16.4.1",
    "react": "^16.4.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "build": "npm run clean:build && npm run lint && npm run prettify && npm run test && tsc -p ./tsconfig.build.json && cp ./package.json ./dist/lib",
    "clean:build": "rimraf ./dist/lib",
    "dist": "cd ./dist/lib && npm publish",
    "lint": "tslint -c tslint.json './src/**/*'",
    "lintfix": "tslint -c tslint.json --fix './src/**/*'",
    "prettify": "prettier -c .prettierrc --write \"src/**/*.@(ts|tsx)\"",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier -c .prettierrc --write",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
