{
  "name": "react-semantics",
  "version": "0.5.5",
  "description": "Blazing fast semantic helper components for working with React.",
  "author": "Christian Svenkerud",
  "repository": {
    "type": "git",
    "url": "https://github.com/csvenke/react-semantics.git"
  },
  "main": "index.min.js",
  "types": "types/index.d.ts",
  "files": [
    "index.min.js",
    "types/index.d.ts",
    "types/components"
  ],
  "private": false,
  "license": "MIT",
  "keywords": [
    "react",
    "react-components",
    "react-utils",
    "react-library"
  ],
  "dependencies": {
    "prop-types": "^15.6.2"
  },
  "peerDependencies": {
    "react-dom": "^16.4.1",
    "react": "^16.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/travis-cli": "^7.0.0",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/enzyme": "^3.1.12",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.4",
    "@types/prop-types": "^15.5.3",
    "@types/react-dom": "^16.0.6",
    "@types/react": "^16.4.6",
    "all-contributors-cli": "^5.3.0",
    "coveralls": "^3.0.2",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme": "^3.3.0",
    "faker": "^4.1.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.1",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "react-docgen-typescript": "^1.6.2",
    "react-dom": "^16.4.1",
    "react-styleguidist": "^7.1.0",
    "react": "^16.4.1",
    "rimraf": "^2.6.2",
    "rollup-plugin-typescript2": "^0.16.1",
    "rollup-plugin-uglify": "^4.0.0",
    "rollup": "^0.63.4",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.4.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "webpack": "^4.16.2"
  },
  "scripts": {
    "build": "npm run clean:build && rollup -c && npm run copy:build",
    "clean:build": "rimraf ./lib && rimraf ./build",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "copy:build": "cp package.json lib/ && cp README.md lib/ && cp LICENSE lib/",
    "docs:server": "styleguidist server",
    "docs": "styleguidist build",
    "lint:fix": "npm run lint:write --fix \"src/**/*.{ts,tsx}\"",
    "lint:write": "tslint -c tslint.json",
    "lint": "npm run lint:write  \"src/**/*.{ts,tsx}\"",
    "prettier:write": "prettier -c .prettierrc --write",
    "prettier": "npm run prettier:write \"src/**/*.{ts,tsx}\"",
    "publish:lib": "npm run build && cd lib && npm publish && cd ..",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test:prod": "npm run lint && npm run test --coverage --no-cache",
    "test:watch": "jest --watch",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "{src}/**/*.{ts,tsx}": [
      "prettier -c .prettierrc --write",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  }
}
