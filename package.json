{
  "name": "react-semantics",
  "version": "0.4.0",
  "description": "Semantic helper components for working with React.",
  "author": "Christian Svenkerud",
  "repository": {
    "type": "git",
    "url": "https://github.com/csvenke/react-semantics.git"
  },
  "main": "lib/index.min.js",
  "types": "lib/types/index.d.ts",
  "files": [
    "lib/index.min.js",
    "lib/types/index.d.ts",
    "lib/types/components"
  ],
  "private": false,
  "license": "MIT",
  "keywords": [
    "react",
    "react-components",
    "react-utils",
    "react-library"
  ],
  "dependencies": {
    "prop-types": "^15.6.2"
  },
  "peerDependencies": {
    "react-dom": "^16.4.1",
    "react": "^16.4.1"
  },
  "devDependencies": {
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/enzyme": "^3.1.12",
    "@types/jest": "^23.3.0",
    "@types/prop-types": "^15.5.3",
    "@types/react-dom": "^16.0.6",
    "@types/react": "^16.4.6",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme": "^3.3.0",
    "husky": "1.0.0-rc.13",
    "jest": "^23.4.1",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "react-docgen-typescript": "^1.6.2",
    "react-dom": "^16.4.1",
    "react-styleguidist": "^7.1.0",
    "react": "^16.4.1",
    "rimraf": "^2.6.2",
    "rollup-plugin-typescript2": "^0.16.1",
    "rollup-plugin-uglify": "^4.0.0",
    "rollup": "^0.63.4",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.4.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "webpack": "^4.16.2"
  },
  "scripts": {
    "build": "npm run clean:build && npm run lint && npm run test && rollup -c",
    "clean:build": "rimraf ./lib && rimraf ./build",
    "lint": "npm run lint:write './src/**/*'",
    "lint:fix": "npm run lint:write --fix './src/**/*'",
    "lint:write": "tslint -c tslint.json",
    "prettier": "npm run prettier:write \"src/**/*.@(ts|tsx)\"",
    "prettier:write": "prettier -c .prettierrc --write",
    "docs": "styleguidist build",
    "docs:server": "styleguidist server",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier -c .prettierrc --write",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  }
}
