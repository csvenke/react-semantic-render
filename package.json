{
  "name": "react-semantic-render",
  "version": "4.0.0",
  "description": "Semantic helper components for rendering content with React.",
  "author": "Christian Svenkerud",
  "contributors": [
    {
      "name": "bergelf",
      "url": "https://github.com/bergelf"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/csvenke/react-semantic-render.git"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "react-components",
    "react-utils",
    "react-library",
    "react-component-library",
    "render",
    "helpers",
    "utils",
    "semantic",
    "conditional"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "lint": "eslint --fix  \"src/**/*.js\" *.js",
    "test": "jest",
    "pretest": "npm run build"
  },
  "dependencies": {
    "prop-types": "15.6.2"
  },
  "peerDependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint": "^5.9.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "react-dom": "^16.6.3",
    "react-test-renderer": "^16.6.3",
    "react": "^16.6.3",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup": "^0.67.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
