{
  "name": "react-semantic-render",
  "version": "5.0.0",
  "description": "Semantic helper components for rendering content with React.",
  "author": "Christian Svenkerud",
  "contributors": [
    {
      "name": "bergelf",
      "url": "https://github.com/bergelf"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/csvenke/react-semantic-render.git"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "react-components",
    "react-utils",
    "react-library",
    "react-component-library",
    "render",
    "helpers",
    "utils",
    "semantic",
    "conditional"
  ],
  "main": "index.cjs.js",
  "module": "index.esm.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "build:copy": "cp package.json dist/ && cp README.md dist/ && cp LICENSE dist/ && cp lib/index.d.ts dist/",
    "deploy": "yarn build && yarn build:copy && cd dist && yarn publish && cd ..",
    "lint": "eslint --fix  \"lib/**/*.js\" *.js",
    "test": "jest",
    "pretest": "yarn build",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "prop-types": "15.6.2"
  },
  "peerDependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^8.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.0.2",
    "eslint": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-test-renderer": "^16.6.3",
    "rollup": "^1.16.2",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-terser": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
