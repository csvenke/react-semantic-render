{
  "name": "react-semantic-render",
  "version": "5.0.0",
  "description": "Semantic helper components for rendering content with React.",
  "author": "Christian Svenkerud",
  "contributors": [
    {
      "name": "bergelf",
      "url": "https://github.com/bergelf"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/csvenke/react-semantic-render.git"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "react-components",
    "react-utils",
    "react-library",
    "react-component-library",
    "render",
    "helpers",
    "utils",
    "semantic",
    "conditional"
  ],
  "main": "index.cjs.js",
  "module": "index.esm.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "build:copy": "cp package.json dist/ && cp README.md dist/ && cp LICENSE dist/ && cp lib/index.d.ts dist/",
    "release": "yarn semantic-release",
    "lint": "eslint --fix {lib,test}/**/*.js *.js",
    "test": "jest",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "prop-types": "15.7.2"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^8.0.0",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/github": "^7.0.5",
    "@semantic-release/npm": "^7.0.5",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "25.2.6",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.0.2",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.1",
    "eslint-config-standard-react": "9.2.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-standard": "4.0.1",
    "husky": "^1.2.0",
    "jest": "25.2.7",
    "lint-staged": "^8.1.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-test-renderer": "^16.6.3",
    "rollup": "2.3.3",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-terser": "5.3.0",
    "semantic-release": "^17.0.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }
}
