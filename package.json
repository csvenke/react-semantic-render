{
  "name": "react-semantic-render",
  "version": "3.1.2",
  "description": "Semantic helper components for rendering content with React.",
  "author": "Christian Svenkerud",
  "contributors": [
    {
      "name": "bergelf",
      "url": "https://github.com/bergelf"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/csvenke/react-semantic-render.git"
  },
  "main": "index.js",
  "module": "index.esm.js",
  "types": "index.d.ts",
  "private": false,
  "license": "MIT",
  "keywords": [
    "react",
    "react-components",
    "react-utils",
    "react-library",
    "react-component-library",
    "render",
    "helpers",
    "utils",
    "semantic",
    "conditional"
  ],
  "dependencies": {
    "prop-types": "^15.6.2"
  },
  "peerDependencies": {
    "react-dom": "^16.5.2",
    "react": "^16.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/travis-cli": "^7.1.2",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/enzyme": "^3.1.14",
    "@types/jest": "^23.3.4",
    "@types/node": "^10.11.3",
    "@types/prop-types": "^15.5.6",
    "@types/react-dom": "^16.0.8",
    "@types/react": "^16.4.16",
    "all-contributors-cli": "^5.4.0",
    "coveralls": "^3.0.2",
    "enzyme-adapter-react-16": "^1.5.0",
    "enzyme": "^3.6.0",
    "faker": "^4.1.0",
    "husky": "^1.1.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "lodash": "^4.17.11",
    "prettier": "^1.14.3",
    "react-docgen-typescript": "^1.10.0",
    "react-dom": "^16.5.2",
    "react-styleguidist": "^8.0.3",
    "react": "^16.5.2",
    "rimraf": "^2.6.2",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-size-snapshot": "^0.7.0",
    "rollup-plugin-terser": "^3.0.0",
    "rollup-plugin-typescript2": "^0.17.0",
    "rollup": "^0.66.2",
    "ts-jest": "^23.10.3",
    "ts-loader": "^5.2.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "tslint-react": "^3.6.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "webpack": "^4.20.1"
  },
  "scripts": {
    "build": "npm run clean:build && rollup -c && npm run copy:build",
    "clean:build": "rimraf ./lib && rimraf ./build",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "copy:build": "cp package.json lib/ && cp README.md lib/ && cp LICENSE lib/ && cp src/index.d.ts lib/",
    "deploy": "npm run build && cd lib && npm publish && cd ..",
    "docs:server": "styleguidist server",
    "docs": "styleguidist build",
    "lint:write": "tslint --fix -p tsconfig.json -c tslint.json",
    "lint": "npm run lint:write  \"src/**/*.{ts,tsx}\"",
    "prettier:write": "prettier -c .prettierrc.json --write",
    "prettier": "npm run prettier:write \"src/**/*.{ts,tsx,md}\" \"*.{js,yml,json}\"",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "test:prod": "npm run lint && npm run test --coverage --no-cache",
    "test:watch": "jest --watch",
    "test": "jest",
    "tslint:check": "tslint-config-prettier-check ./tslint.json"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier -c .prettierrc.json --write",
      "tslint -c tslint.json --fix",
      "git add"
    ],
    "*.{js,yml,json}": [
      "prettier -c .prettierrc.json --write",
      "git add"
    ]
  }
}
