{
  "name": "react-semantic-render",
  "version": "5.0.0",
  "description": "Semantic helper components for rendering content with React.",
  "author": "Christian Svenkerud",
  "contributors": [
    {
      "name": "bergelf",
      "url": "https://github.com/bergelf"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/csvenke/react-semantic-render.git"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "react-components",
    "react-utils",
    "react-library",
    "react-component-library",
    "render",
    "helpers",
    "utils",
    "semantic",
    "conditional"
  ],
  "main": "index.cjs.js",
  "module": "index.esm.js",
  "types": "index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && rollup -c",
    "build:copy": "cp package.json dist/ && cp README.md dist/ && cp LICENSE dist/ && cp src/index.d.ts dist/",
    "release": "yarn semantic-release",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "test": "jest"
  },
  "dependencies": {
    "prop-types": "15.7.2"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-react": "7.9.4",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@csvenke/prettier-config": "3.0.0",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.0.5",
    "@semantic-release/npm": "7.0.5",
    "@semantic-release/release-notes-generator": "9.0.1",
    "@types/jest": "25.2.1",
    "@types/node": "13.11.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "25.3.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "husky": "4.2.5",
    "jest": "25.3.0",
    "lint-staged": "10.1.3",
    "prettier": "2.0.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-test-renderer": "16.13.1",
    "rollup": "2.6.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-terser": "5.3.0",
    "semantic-release": "17.0.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,yml}": [
      "prettier --write"
    ]
  }
}
