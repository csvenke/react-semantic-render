{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "target": "es5",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src"
  ]
}
